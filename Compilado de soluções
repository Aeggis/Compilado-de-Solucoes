    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void button1_Click(object sender, EventArgs e)
        {
            MessageBox.Show("1: Este erro pode ocorrer devido ao Programa de Segurança - Antivirus - estar encontrando falsos positivos, neste caso, opte por desativar o mesmo ou criar uma exceção à sua pasta raiz do Grand Chase. 2: Exclua o main.exe da pasta do jogo e deixe que o mesmo seja atualizado novamente. 3: O main.exe não foi finalizado corretamente e ainda consta como aberto no gerenciador de tarefas, finalize o processo em questão.");
        }

        private void button2_Click(object sender, EventArgs e)
        {
            MessageBox.Show("Este erro pode ocorrer devido ao jogo ter sido executado da maneira errada, através do main.exe. > Execute sempre o jogo pelo launcher.");
        }

        private void button3_Click(object sender, EventArgs e)
        {
            MessageBox.Show("Este erro pode ocorrer devido ao Programa de Segurança - Antivirus - estar encontrando uma possível ameaça no executável. > Opte por baixar o launcher novamente e criar uma exceção à pasta raiz do seu Grand Chase.");
        }

        private void button4_Click(object sender, EventArgs e)
        {
            MessageBox.Show("Este erro pode ocorrer devido a falta de arquivos > Instale o C++ 2010 - Instale o C++ 2015 - Instale o DirectX 9.0c. - Baixe novamente o GCH.");
        }

        private void button5_Click(object sender, EventArgs e)
        {
            MessageBox.Show("Este erro pode ocorrer devido a falta de permissão do usuário. > Entre nas propriedades da sua pasta raiz do GCH; Vá na aba 'Segurança'; Verifique se todos os usuários e grupos como 'Sistema  Administradores e você' estão com todas as permissões. Caso eles não estejam, clique em editar e selecione Permitir em todos os casos para todos os usuários.");
        }

        private void button6_Click(object sender, EventArgs e)
        {
            MessageBox.Show("Abra a pasta raiz do jogo e vá na pasta vcredist. Após feito, execute o instalador que se encontra na pasta 2015 e tente novamente. Usar a ferramenta 'reparar' também é uma opção.");
        }
    }
}
